<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#070707">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_small"
            android:id="@+id/imageView"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/welcome"
                android:layout_weight="1"
                android:text="Welcome"
                android:textSize="20dp"
                android:textColor="#fcf9f9"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/welcome_user"
                android:layout_weight="1"
                android:text=""
                android:textSize="20dp"
                android:textColor="#fcfafa"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_btn"
            android:text="Log Out"
            android:id="@+id/logout_button"
            android:onClick="signout" />


    </LinearLayout>
    <!--
    <FrameLayout
        android:id="@+id/your_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
-->
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/logged_in_button"
            android:layout_weight="1"
            android:text="Air Chat"
            android:id="@+id/button"
            android:textSize="30dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/logged_in_button"
            android:layout_weight="1"
            android:text="Add Flight"
            android:id="@+id/button4"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/logged_in_button"
            android:layout_weight="1"
            android:text="Seat Chart"
            android:id="@+id/button5"
            android:textSize="30dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/logged_in_button"
            android:layout_weight="1"
            android:text="Delete Flight"
            android:id="@+id/button6"
            android:textSize="30dp" />
    </LinearLayout>


</LinearLayout>
